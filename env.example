# Environment Variables for EZ Tracking Board

# ======================
# Claude AI Configuration
# ======================
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here

# ======================
# EZDerm Service User Configuration
# ======================
# Background worker service credentials for EZDerm API
# These should be dedicated service account credentials
EZDERM_USER=your_service_user_here
EZDERM_PASS=your_service_password_here

# Tailscale VPN-Only Access Configuration
TAILSCALE_ENABLED=false
TAILSCALE_TAILNET=your-tailnet.ts.net
TAILSCALE_API_KEY=tskey-api-xxxxxxxxxxxxx
TAILSCALE_BYPASS_DEV=true

# ======================
# Frontend Configuration  
# ======================
# Set to true to use mock data (no backend required)
REACT_APP_USE_MOCK_DATA=false

# API endpoint for frontend
REACT_APP_API_URL=http://localhost:5001

# ======================
# Database Configuration (for local development)
# ======================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vital_signs_tracking
DB_USER=postgres
DB_PASSWORD=postgres

# ======================
# Redis Configuration (for local development)
# ======================
REDIS_HOST=localhost
REDIS_PORT=6379
